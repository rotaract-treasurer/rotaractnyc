rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    // Look up the member doc in Firestore to determine role + status.
    // Storage rules support firestore.get() for cross-service lookups.
    function memberData() {
      return firestore.get(/databases/(default)/documents/members/$(request.auth.uid)).data;
    }

    function hasMemberDoc() {
      return firestore.exists(/databases/(default)/documents/members/$(request.auth.uid));
    }

    function isMember() {
      return isAuthenticated() && hasMemberDoc() && memberData().status == 'active';
    }

    function isBoard() {
      return isMember() && memberData().role in ['board', 'treasurer', 'president'];
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Max file size: 10 MB
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // ── Profile Photos ──
    match /profile-photos/{userId}/{fileName} {
      allow read: if isMember();
      allow write: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId) || isBoard();
    }

    // ── Community Post Attachments ──
    match /post-attachments/{userId}/{fileName} {
      allow read: if isMember();
      allow write: if isOwner(userId) && isValidSize();
      allow delete: if isOwner(userId) || isBoard();
    }

    // ── Documents (meeting minutes, handbooks) ──
    match /documents/{fileName} {
      allow read: if isMember();
      allow write, delete: if isBoard();
    }

    // ── Event Images ──
    match /event-images/{eventId}/{fileName} {
      allow read: if true;
      allow write: if isBoard() && isImage() && isValidSize();
      allow delete: if isBoard();
    }

    // ── Gallery Images ──
    match /gallery/{fileName} {
      allow read: if true;
      allow write: if isBoard() && isImage() && isValidSize();
      allow delete: if isBoard();
    }

    // ── Article Images ──
    match /article-images/{fileName} {
      allow read: if true;
      allow write: if isBoard() && isImage() && isValidSize();
      allow delete: if isBoard();
    }

    // ── Site Media (hero carousel, etc.) ──
    match /site-media/{allPaths=**} {
      allow read: if true;
      allow write: if isBoard() && isImage() && isValidSize();
      allow delete: if isBoard();
    }

    // ── Expense Receipts ──
    match /receipts/{fileName} {
      allow read: if isBoard();
      allow write: if isBoard() && isValidSize();
      allow delete: if isBoard();
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
